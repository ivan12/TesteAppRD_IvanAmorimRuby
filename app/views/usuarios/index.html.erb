<p id="notice"><%= notice %></p>

<h1>Lista de Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
	  <th>Email</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nome %></td>
		<td><%= usuario.email %></td>
        <td ><%= link_to 'Exibir', usuario %></td>
        <td><%= link_to 'Editar', edit_usuario_path(usuario) %></td>
		<% if usuario_signed_in? %>
			<% if current_usuario == usuario %>
				 <td>Usuário logado</td>
			<% else %>
				<td><%= link_to 'Deletar', usuario, method: :delete, data: { confirm: 'Você tem certeza que deseja excluir?' } %></td>
			<% end %>
		<% else %>
			<td><%= link_to 'Deletar', usuario, method: :delete, data: { confirm: 'Você tem certeza que deseja excluir?' } %></td>
		<% end %>
		
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<% if usuario_signed_in? %>

<% else %>
	<%= link_to 'Novo Usuario', new_usuario_path %>
<% end %>

