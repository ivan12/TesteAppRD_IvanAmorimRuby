<p id="notice"><%= notice %></p>

<h1>Lista de Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
	  <th>Email</th>
      <th>Senha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nome %></td>
		<td><%= usuario.email %></td>
        <td><%= usuario.password %></td>
        <td><%= link_to 'Mostrar', usuario %></td>
        <td><%= link_to 'Editar', edit_usuario_path(usuario) %></td>
		<td><%= button_to "Deletar", usuario, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Usuario', new_usuario_path %>
